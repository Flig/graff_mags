<h2><%= @magazine.title %></h2>
<%if current_user.role == 'admin' %>
  <p><%= link_to 'Edit this magazine', edit_admin_magazine_path(@magazine) %></p>
<% end %>
<ul class="medium-block-grid-2">
  <% @magazine.issues.each do |issue| %>
    <li>
      <%= link_to(image_tag(issue.front_cover.url), issue_path(issue)) %>
    </li>
  <% end %>
</ul>
