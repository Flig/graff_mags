<div class="row">
  <div class="small-5 columns" id="form">
    <h2>Add a New Issue</h2>
    <%= simple_form_for @issue do |f| %>
      <%= f.input :magazine %>

      <%= f.input :title %>

      <div>
        <h3>Publication Info</h3>

      <%= f.input :year, label: "Year of Publication", collection: 1970..2014 %>

      <%= f.input :language %>

      <%= f.input :address %>

      <%= f.input :city %>

      <%= f.input :state %>

      <%= f.input :country, collection: ['US', 'Germany', 'UK', 'France', 'Switzerland']%>
      </div>
      <div>
        <h3>Physical Specs</h3>
      <%= f.input :size %>

      <%= f.input :binding %>

      <%= f.input :medium %>

      <%= f.input :format %>
      </div>

      <div>
        <h3>Images</h3>
      <%=f.input :front_cover, type: :file %>

      <%=f.input :back_cover, type: :file %>

      <%=f.input :featured_image, type: :file %>
      </div>

      <%= f.submit 'Submit', class: "button" %>
    <% end %>
  </div>
</div>
