<div class="large-10 large-offset-1 columns">
  <h2><%= @language.language %></h2>
  <%if current_user.role == 'admin' %>
    <p><%= link_to 'Edit this language', edit_language_path(@language) %></p>
    <p><%= link_to 'See all languages', languages_path %></p>
  <% end %>
  <ul class="medium-block-grid-2">
    <% @language.issues.each do |issue| %>
      <li>
        <%= link_to(image_tag(issue.front_cover.url), issue_path(issue)) %>
      </li>
    <% end %>
  </ul>
</div>
