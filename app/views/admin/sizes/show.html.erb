<div class="large-10 large-offset-1 columns">
  <h2><%= @size.size %></h2>
  <%if current_user.role == 'admin' %>
    <p><%= link_to 'Edit this size', edit_admin_size_path(@size) %></p>
    <p><%= link_to 'See all sizes', admin_sizes_path %></p>
  <% end %>
  <ul class="medium-block-grid-2">
    <% @size.issues.each do |issue| %>
      <li>
        <%= link_to(image_tag(issue.front_cover.url), issue_path(issue)) %>
      </li>
    <% end %>
  </ul>
</div>
