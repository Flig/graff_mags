<div class="large-10 large-offset-1 columns">
  <h2><%= @medium.medium %></h2>
  <%if current_user.role == 'admin' %>
    <p><%= link_to 'Edit this medium', edit_admin_medium_path(@medium) %></p>
    <p><%= link_to 'See all media', admin_media_path %></p>
  <% end %>
  <ul class="medium-block-grid-2">
    <% @medium.issues.each do |issue| %>
      <li>
        <%= link_to(image_tag(issue.front_cover.url), issue_path(issue)) %>
      </li>
    <% end %>
  </ul>
</div>
